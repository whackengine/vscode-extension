{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "ActionScript 3",
    "scopeName": "source.as3",
    "patterns": [
        {
            "include": "#directive"
        }
    ],
    "repository": {
        "directive": {
            "patterns": [
                {
                    "match": "(?x) \\b(package) \\s* ((?:(?x) [\\p{L}$_\\p{Nl}] | (?:(?x) \\\\u((\\{[A-Fa-f0-9]+\\})|[A-Fa-f0-9]{4})))(?:(?x) [\\p{L}$_\\p{Nl}\\p{Mn}\\p{Mc}\\p{Nd}\\p{Pc}] | (?:(?x) \\\\u((\\{[A-Fa-f0-9]+\\})|[A-Fa-f0-9]{4})))* \\s* (\\s*\\.\\s*(?:(?x) [\\p{L}$_\\p{Nl}] | (?:(?x) \\\\u((\\{[A-Fa-f0-9]+\\})|[A-Fa-f0-9]{4})))(?:(?x) [\\p{L}$_\\p{Nl}\\p{Mn}\\p{Mc}\\p{Nd}\\p{Pc}] | (?:(?x) \\\\u((\\{[A-Fa-f0-9]+\\})|[A-Fa-f0-9]{4})))*)*)\\b",
                    "captures": {
                        "1": {
                            "name": "keyword.other"
                        },
                        "2": {
                            "name": "entity.name.other"
                        }
                    }
                },
                {
                    "match": "(?x) \\b(package)\\b",
                    "captures": {
                        "1": {
                            "name": "keyword.other"
                        }
                    }
                },
                {
                    "match": "(?x) \\b((?:(?x) (?:(?x) [\\p{L}$_\\p{Nl}] | (?:(?x) \\\\u((\\{[A-Fa-f0-9]+\\})|[A-Fa-f0-9]{4}))) (?:(?x) [\\p{L}$_\\p{Nl}\\p{Mn}\\p{Mc}\\p{Nd}\\p{Pc}] | (?:(?x) \\\\u((\\{[A-Fa-f0-9]+\\})|[A-Fa-f0-9]{4})))* ))\\s*:(?!:)",
                    "captures": {
                        "1": {
                            "name": "entity.name.other"
                        }
                    }
                },
                {
                    "name": "expression.group",
                    "begin": "\\{",
                    "end": "\\}",
                    "patterns": [
                        {
                            "include": "#directive"
                        }
                    ],
                    "beginCaptures": {
                        "0": "punctuation.definition.block"
                    },
                    "endCaptures": {
                        "0": "punctuation.definition.block"
                    }
                },
                {
                    "match": "(?x) \\b  (   (?:\\s*(?:(?x) (?:(?x) [\\p{L}$_\\p{Nl}] | (?:(?x) \\\\u((\\{[A-Fa-f0-9]+\\})|[A-Fa-f0-9]{4}))) (?:(?x) [\\p{L}$_\\p{Nl}\\p{Mn}\\p{Mc}\\p{Nd}\\p{Pc}] | (?:(?x) \\\\u((\\{[A-Fa-f0-9]+\\})|[A-Fa-f0-9]{4})))* )(?:\\s*\\.\\s*(?:(?x) (?:(?x) [\\p{L}$_\\p{Nl}] | (?:(?x) \\\\u((\\{[A-Fa-f0-9]+\\})|[A-Fa-f0-9]{4}))) (?:(?x) [\\p{L}$_\\p{Nl}\\p{Mn}\\p{Mc}\\p{Nd}\\p{Pc}] | (?:(?x) \\\\u((\\{[A-Fa-f0-9]+\\})|[A-Fa-f0-9]{4})))* ))*)+   )  \\s*  (?=class|enum|interface|type|namespace|var|const|function)\\b",
                    "captures": {
                        "1": {
                            "name": "keyword.other"
                        }
                    }
                }
            ]
        }
    }
}