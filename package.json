{
  "name": "whack-engine",
  "displayName": "Whack engine support",
  "description": "Integration with Whack engine and ActionScript 3 and MXML.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "whack-engine.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "as3",
        "extensions": [
          ".as"
        ],
        "aliases": [
          "ActionScript 3",
          "ActionScript",
          "AS3",
          "AS",
          "as3",
          "as"
        ],
        "configuration": "./languages/as3/as3.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "as3",
        "scopeName": "source.as3",
        "path": "./languages/as3/as3.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile-syntaxes && tsc -p ./",
    "watch": "npm run compile-syntaxes && tsc -watch -p ./",
    "compile-syntaxes": "npx tmlangyaml2json languages/as3/as3.tmLanguage.yaml languages/as3/as3.tmLanguage.json",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "com.hydroperfox.tmlanguage.yaml2json": "^1.0.0",
    "vscode-languageclient": "^9.0.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  }
}
